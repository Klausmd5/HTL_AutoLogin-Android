<resources>

    <!-- Base application theme. -->
    <style name="AppThemeOLD" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="input" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c64NTSC</item>
        <item name="colorPrimaryDark">@color/c64NTSC</item>
        <item name="colorAccent">@color/amazonCursor</item>
        <item name="android:navigationBarColor">@color/c64NTSC</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/prime_rework</item>
        <item name="colorPrimaryDark">@color/dark_rework</item>
        <item name="colorAccent">@color/amazonCursor</item>
        <item name="android:navigationBarColor">@color/prime_rework</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/backgroundBlack</item>
        <item name="colorPrimaryDark">@color/backgroundBlack</item>
        <item name="colorAccent">@color/SandroRed</item>
        <item name="android:navigationBarColor">@color/backgroundBlack</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
